<Window x:Class="NetSentinel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:NetSentinel.UI"
        xmlns:vm="clr-namespace:NetSentinel.ViewModels"
        Title="NetSentinel - LAN Security &amp; Traffic Intelligence Analyzer" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource DeepNavyBlueBrush}"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        RenderOptions.BitmapScalingMode="HighQuality">
    
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="40"
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            CornerRadius="0"
            UseAeroCaptionButtons="True"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Implicit DataTemplates for Views - automatically applied by ViewModel type -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <ui:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DevicesViewModel}">
            <ui:DevicesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConnectionsViewModel}">
            <ui:ConnectionsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AlertsViewModel}">
            <ui:AlertsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <ui:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!-- Custom Title Bar -->
        <Border Background="{StaticResource DeepNavyBlueBrush}" 
                Height="40" 
                VerticalAlignment="Top" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1"
                Panel.ZIndex="1000">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           Margin="10,0,0,0">
                    <!-- Shield Icon -->
                    <Viewbox Width="20" Height="20" Margin="0,0,8,0">
                        <Canvas Width="24" Height="24">
                            <Path Data="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1Z" 
                                  Fill="{StaticResource ElectricBlueBrush}"
                                  Stroke="{StaticResource SoftVioletBrush}"
                                  StrokeThickness="1"/>
                            <Path Data="M10 17L6 13L7.41 11.59L10 14.17L16.59 7.58L18 9L10 17Z" 
                                  Fill="White"/>
                        </Canvas>
                    </Viewbox>
                    
                    <!-- Title Text -->
                    <TextBlock Text="NetSentinel - LAN Security &amp; Traffic Intelligence Analyzer" 
                              FontSize="13" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource LightTextBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Window State Indicator (Admin Badge) -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"
                           Margin="0,0,140,0">
                    <Border Background="{StaticResource DarkPurpleBrush}" 
                           CornerRadius="3" 
                           Padding="6,2"
                           Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="ADMIN" 
                                  FontSize="10" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Grid -->
        <Grid Margin="0,40,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource DarkBgBrush}" 
               BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0"
               Visibility="{Binding IsSidebarVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
               Width="250">
            <StackPanel>
                <!-- Logo/Title -->
                <Border Background="{StaticResource DeepNavyBlueBrush}" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ›¡ï¸ NetSentinel" FontSize="20" FontWeight="Bold" 
                                  Foreground="{StaticResource ElectricBlueBrush}" Margin="0,0,0,5"/>
                        <TextBlock Text="Security Monitor" FontSize="12" 
                                  Foreground="{StaticResource MutedTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToDashboardCommand}">
                    <Button.Tag>
                        <Binding Path="CurrentViewName" Converter="{StaticResource ViewNameToTagConverter}" 
                                ConverterParameter="Dashboard"/>
                    </Button.Tag>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,12,0"/>
                        <TextBlock Text="Dashboard" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToDevicesCommand}">
                    <Button.Tag>
                        <Binding Path="CurrentViewName" Converter="{StaticResource ViewNameToTagConverter}" 
                                ConverterParameter="Devices"/>
                    </Button.Tag>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’»" FontSize="18" Margin="0,0,12,0"/>
                        <TextBlock Text="Devices" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToConnectionsCommand}">
                    <Button.Tag>
                        <Binding Path="CurrentViewName" Converter="{StaticResource ViewNameToTagConverter}" 
                                ConverterParameter="Connections"/>
                    </Button.Tag>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”—" FontSize="18" Margin="0,0,12,0"/>
                        <TextBlock Text="Connections" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToAlertsCommand}">
                    <Button.Tag>
                        <Binding Path="CurrentViewName" Converter="{StaticResource ViewNameToTagConverter}" 
                                ConverterParameter="Alerts"/>
                    </Button.Tag>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸš¨" FontSize="18" Margin="0,0,12,0"/>
                        <TextBlock Text="Alerts" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToSettingsCommand}">
                    <Button.Tag>
                        <Binding Path="CurrentViewName" Converter="{StaticResource ViewNameToTagConverter}" 
                                ConverterParameter="Settings"/>
                    </Button.Tag>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™ï¸" FontSize="18" Margin="0,0,12,0"/>
                        <TextBlock Text="Settings" FontSize="14"/>
                    </StackPanel>
                </Button>

                <!-- System Info -->
                <Border Background="{StaticResource DeepNavyBlueBrush}" 
                       Padding="20" Margin="10" CornerRadius="8"
                       VerticalAlignment="Bottom">
                    <StackPanel>
                        <TextBlock Text="System Status" FontSize="12" FontWeight="SemiBold" 
                                  Foreground="{StaticResource MutedTextBrush}" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Text="Monitoring Active" FontSize="11" 
                                      Foreground="{StaticResource LightTextBrush}"/>
                        </StackPanel>
                        <TextBlock FontSize="10" Foreground="{StaticResource MutedTextBrush}">
                            <Run Text="Version 1.0.0"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Hamburger Menu Button -->
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="15,15,0,0" Width="40" Height="40"
                   Background="#1E293B"
                   BorderBrush="Transparent"
                   Command="{Binding ToggleSidebarCommand}"
                   Cursor="Hand"
                   Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                   BorderThickness="0">
    <Button.Effect>
        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="#000000" Opacity="0.3"/>
    </Button.Effect>
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#273449"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Button.Template>
    <TextBlock Text="â˜°" FontSize="20" Foreground="White"
              HorizontalAlignment="Center" VerticalAlignment="Center"/>
</Button>

            <!-- Refresh Button -->
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="65,15,0,0" Width="40" Height="40"
                   Background="#1E293B"
                   BorderBrush="Transparent"
                   Command="{Binding RefreshAllCommand}"
                   IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBoolConverter}}"
                   Cursor="Hand"
                   Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                   BorderThickness="0">
    <Button.Effect>
        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="#000000" Opacity="0.3"/>
    </Button.Effect>
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    CornerRadius="10" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#273449"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#0F172A"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Button.Template>
    <Viewbox Width="20" Height="20" x:Name="RefreshIcon" 
             RenderTransformOrigin="0.5,0.5">
        <Viewbox.RenderTransform>
            <RotateTransform x:Name="RefreshRotation" Angle="0"/>
        </Viewbox.RenderTransform>
        <Viewbox.Style>
            <Style TargetType="Viewbox">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard x:Name="RefreshAnimation">
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                                                   From="0" To="360" Duration="0:0:1"
                                                   RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <StopStoryboard BeginStoryboardName="RefreshAnimation"/>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Viewbox.Style>
        <Canvas Width="24" Height="24">
            <Path Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" 
                  Fill="White"/>
        </Canvas>
    </Viewbox>
</Button>
            
            <!-- Implicit DataTemplates automatically apply based on CurrentView type -->
            <ContentControl Content="{Binding CurrentView}" Margin="0,60,0,0"/>
        </Grid>
        </Grid>
    </Grid>
</Window>
