<UserControl x:Class="NetSentinel.UI.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Background="{StaticResource DeepNavyBlueBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- Header -->
            <TextBlock Text="Dashboard" Style="{StaticResource TitleText}" Margin="0,0,0,10"/>
            
            <!-- Network Info Section -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Network / SSID" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding ConnectedSsid}" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{StaticResource LightTextBrush}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="IP Address" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding CurrentIpAddress}" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{StaticResource LightTextBrush}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Gateway" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding CurrentGateway}" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{StaticResource LightTextBrush}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="20,0,0,0">
                        <Border Background="{StaticResource DarkPurpleBrush}" CornerRadius="20" 
                               Padding="12,6" Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="ADMIN" FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Stats Grid -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Upload Speed -->
                <Border Style="{StaticResource Card}" Grid.Column="0" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Upload Speed" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding UploadSpeedMbps, StringFormat={}{0:F2} Mbps}" 
                                  Style="{StaticResource StatValue}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding TodayUpload, StringFormat=Today: {0}}" 
                                  Style="{StaticResource SubtitleText}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Download Speed -->
                <Border Style="{StaticResource Card}" Grid.Column="1" Margin="10,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Download Speed" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding DownloadSpeedMbps, StringFormat={}{0:F2} Mbps}" 
                                  Style="{StaticResource StatValue}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding TodayDownload, StringFormat=Today: {0}}" 
                                  Style="{StaticResource SubtitleText}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Devices -->
                <Border Style="{StaticResource Card}" Grid.Column="2" Margin="10,0,10,0">
                    <StackPanel>
                        <TextBlock Text="LAN Devices" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding DeviceCount}" Style="{StaticResource StatValue}" 
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Online devices" Style="{StaticResource SubtitleText}" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Connections -->
                <Border Style="{StaticResource Card}" Grid.Column="3" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Active Connections" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding ActiveConnectionsCount}" Style="{StaticResource StatValue}" 
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="TCP/UDP connections" Style="{StaticResource SubtitleText}" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Bandwidth Chart -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Text="Real-Time Bandwidth" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="{StaticResource LightTextBrush}"/>
                            <TextBlock Text="â„¹ï¸ Shows ALL network traffic on this PC, not just internet speed" 
                                      FontSize="11" Foreground="{StaticResource MutedTextBrush}" 
                                      Margin="0,3,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Border Background="{StaticResource DarkBgBrush}" CornerRadius="6" Padding="10,5" Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="12" Height="12" Fill="#10B981" Margin="0,0,5,0"/>
                                    <TextBlock Text="Upload" FontSize="12" Foreground="{StaticResource LightTextBrush}" Margin="0,0,10,0"/>
                                    <Ellipse Width="12" Height="12" Fill="#3B82F6" Margin="0,0,5,0"/>
                                    <TextBlock Text="Download" FontSize="12" Foreground="{StaticResource LightTextBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Background="{StaticResource DarkBgBrush}" CornerRadius="6" Padding="10,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“¡ Ping: " FontSize="12" Foreground="{StaticResource MutedTextBrush}" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding PingMs, StringFormat={}{0} ms}" FontSize="12" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#10B981"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PingMs}" Value="-1">
                                                        <Setter Property="Foreground" Value="#DC2626"/>
                                                        <Setter Property="Text" Value="N/A"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PingStatus}" Value="High">
                                                        <Setter Property="Foreground" Value="#F59E0B"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                    
                    <!-- WiFi Disconnected Warning -->
                    <Border Background="#7F1D1D" CornerRadius="8" Padding="15,10" Margin="0,0,0,15"
                           Visibility="{Binding IsWifiConnected, Converter={StaticResource InverseBoolToVisConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="No network connection detected. Please connect to WiFi/Ethernet to monitor network traffic." 
                                      FontSize="13" Foreground="White" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <lvc:CartesianChart Series="{Binding BandwidthSeries}" Height="250"
                                       XAxes="{Binding XAxes}"
                                       YAxes="{Binding YAxes}">
                        <lvc:CartesianChart.Resources>
                            <Style TargetType="lvc:CartesianChart">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </lvc:CartesianChart.Resources>
                    </lvc:CartesianChart>
                </StackPanel>
            </Border>

            <!-- Recent Alerts -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="Recent Security Alerts" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Left"/>
                        <Border Background="{StaticResource DarkPurpleBrush}" CornerRadius="12" 
                               Padding="8,4" HorizontalAlignment="Right" 
                               Visibility="{Binding UnreadAlertsCount, Converter={StaticResource IntToVisibilityConverter}}">
                            <TextBlock Text="{Binding UnreadAlertsCount}" FontSize="12" FontWeight="Bold" 
                                      Foreground="White"/>
                        </Border>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding RecentAlerts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource DarkBgBrush}" CornerRadius="8" 
                                       Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" CornerRadius="6" Padding="8,4" Margin="0,0,15,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                            <Setter Property="Background" Value="#DC2626"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Warning">
                                                            <Setter Property="Background" Value="#F59E0B"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Info">
                                                            <Setter Property="Background" Value="#3B82F6"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Severity}" FontSize="11" FontWeight="Bold" 
                                                      Foreground="White"/>
                                        </Border>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" 
                                                      Foreground="{StaticResource LightTextBrush}"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                      Foreground="{StaticResource MutedTextBrush}" 
                                                      TextWrapping="Wrap" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{Binding Timestamp, StringFormat={}{0:HH:mm}}" 
                                                  FontSize="12" Foreground="{StaticResource MutedTextBrush}" 
                                                  VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="No recent alerts" FontSize="14" Foreground="{StaticResource MutedTextBrush}" 
                              HorizontalAlignment="Center" Margin="0,20,0,0"
                              Visibility="{Binding RecentAlerts.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Status Bar -->
            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="{StaticResource MutedTextBrush}" 
                      Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
