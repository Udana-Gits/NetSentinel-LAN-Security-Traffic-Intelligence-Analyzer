<UserControl x:Class="NetSentinel.UI.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource DeepNavyBlueBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- Header -->
            <TextBlock Text="Settings" Style="{StaticResource TitleText}" Margin="0,0,0,10"/>
            <TextBlock Text="Configure application preferences and security thresholds" 
                      Style="{StaticResource SubtitleText}" Margin="0,0,0,30"/>

            <!-- General Settings -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="General Settings" FontSize="18" FontWeight="SemiBold" 
                              Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,20"/>

                    <CheckBox Content="Enable automatic device scanning" 
                             IsChecked="{Binding AutoScanDevices}"
                             Style="{StaticResource ModernCheckBox}" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Device scan interval (minutes):" 
                                  Foreground="{StaticResource LightTextBrush}" FontSize="14" 
                                  VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding ScanIntervalMinutes}" 
                                Style="{StaticResource NumericTextBox}"/>
                    </Grid>

                    <CheckBox Content="Enable packet capture (requires admin privileges)" 
                             IsChecked="{Binding EnablePacketCapture}"
                             Style="{StaticResource ModernCheckBox}" Margin="0,0,0,15"/>

                    <CheckBox Content="Show security notifications" 
                             IsChecked="{Binding ShowNotifications}"
                             Style="{StaticResource ModernCheckBox}" Margin="0,0,0,15"/>

                    <CheckBox Content="Minimize to system tray" 
                             IsChecked="{Binding MinimizeToTray}"
                             Style="{StaticResource ModernCheckBox}" Margin="0,0,0,15"/>

                    <CheckBox Content="Start with Windows" 
                             IsChecked="{Binding AutoStartWithWindows}"
                             Style="{StaticResource ModernCheckBox}"/>
                </StackPanel>
            </Border>

            <!-- Security Thresholds -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Security Thresholds" FontSize="18" FontWeight="SemiBold" 
                              Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,20"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Traffic spike threshold (KB/s):" 
                                  Foreground="{StaticResource LightTextBrush}" FontSize="14" 
                                  VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding TrafficSpikeThreshold}" 
                                Style="{StaticResource NumericTextBox}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Connection count threshold:" 
                                  Foreground="{StaticResource LightTextBrush}" FontSize="14" 
                                  VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding ConnectionCountThreshold}" 
                                Style="{StaticResource NumericTextBox}"/>
                    </Grid>

                    <TextBlock Text="Alerts will be generated when these thresholds are exceeded" 
                              Style="{StaticResource SubtitleText}" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Actions" FontSize="18" FontWeight="SemiBold" 
                              Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save Settings" Style="{StaticResource ModernButton}" 
                               Command="{Binding SaveSettingsCommand}" Margin="0,0,10,0"
                               Padding="25,10" FontSize="15"/>
                        <Button Content="Reset to Defaults" Style="{StaticResource ModernButton}" 
                               Command="{Binding ResetSettingsCommand}" Margin="0,0,10,0"
                               Background="{StaticResource DarkBgBrush}"/>
                        <Button Content="Test Network Scan" Style="{StaticResource ModernButton}" 
                               Command="{Binding TestNetworkScanCommand}"
                               Background="{StaticResource SoftVioletBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Information -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="About NetSentinel" FontSize="18" FontWeight="SemiBold" 
                              Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Version:" FontWeight="SemiBold" 
                                  Foreground="{StaticResource LightTextBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="1.0.0" Foreground="{StaticResource MutedTextBrush}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Build:" FontWeight="SemiBold" 
                                  Foreground="{StaticResource LightTextBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="2026.02.17" Foreground="{StaticResource MutedTextBrush}"/>
                    </StackPanel>

                    <Border Background="{StaticResource DarkBgBrush}" CornerRadius="8" Padding="15" 
                           BorderBrush="{StaticResource ElectricBlueBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="⚠️ Ethical Usage Notice" FontSize="14" FontWeight="Bold" 
                                      Foreground="{StaticResource ElectricBlueBrush}" Margin="0,0,0,10"/>
                            <TextBlock Text="Use this tool only on networks you own or have explicit authorization to monitor. Unauthorized network monitoring may violate laws and regulations in your jurisdiction." 
                                      FontSize="13" Foreground="{StaticResource MutedTextBrush}" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Status -->
            <TextBlock Text="{Binding StatusMessage}" FontSize="12" 
                      Foreground="{StaticResource MutedTextBrush}" Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
