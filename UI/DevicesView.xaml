<UserControl x:Class="NetSentinel.UI.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NetSentinel.UI"
             Background="{StaticResource DeepNavyBlueBrush}">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Network Devices" Style="{StaticResource TitleText}" Margin="0,0,0,10"/>
            <TextBlock Text="Discovered devices on your local network" Style="{StaticResource SubtitleText}"/>
        </StackPanel>

        <!-- Stats -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource Card}" Grid.Column="0" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Total Devices" Style="{StaticResource StatLabel}"/>
                    <TextBlock Text="{Binding TotalDevices}" Style="{StaticResource StatValue}" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Grid.Column="1" Margin="10,0,10,0">
                <StackPanel>
                    <TextBlock Text="Online Now" Style="{StaticResource StatLabel}"/>
                    <TextBlock Text="{Binding OnlineDevices}" Style="{StaticResource StatValue}" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Grid.Column="2" Margin="10,0,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Scan Network" Style="{StaticResource ModernButton}" 
                               Command="{Binding ScanNetworkCommand}" IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                               Margin="0,0,10,0"/>
                        <Button Content="Refresh" Style="{StaticResource ModernButton}" 
                               Command="{Binding RefreshDevicesCommand}" Margin="0,0,10,0"/>
                        <Button Content="Export CSV" Style="{StaticResource ModernButton}" 
                               Command="{Binding ExportDevicesCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Search -->
        <Border Style="{StaticResource Card}" Grid.Row="2" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                        Style="{StaticResource ModernTextBox}"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource DarkBgBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <TextBlock Text="Search by IP, MAC, Vendor, or Hostname..." 
                          FontSize="14" Foreground="{StaticResource MutedTextBrush}"
                          IsHitTestVisible="False" Padding="12,8"
                          Visibility="{Binding FilterText, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Devices Table -->
        <Border Style="{StaticResource Card}" Grid.Row="3">
            <DataGrid ItemsSource="{Binding CurrentDevices}" 
             Style="{StaticResource ModernDataGrid}"
             ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
             FontSize="14"
             RowHeight="40"
             HeadersVisibility="Column"
             ColumnHeaderHeight="45"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             GridLinesVisibility="None"
             AlternatingRowBackground="#1E293B"
             AlternationCount="2">
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Type" Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DeviceType, Converter={StaticResource DeviceTypeToIconConverter}}" 
                                  FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"
                                  ToolTip="{Binding DeviceType}"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="*"/>
            <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="*"/>
            <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="*"/>
            <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="*"/>
            <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="*"/>
            <DataGridTemplateColumn Header="Status" Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Border CornerRadius="20" Padding="8,4" HorizontalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#A7F3D0" Offset="0.0"/>
                                                <GradientStop Color="#10B981" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                            <Setter Property="Background" Value="#6B7280"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock FontSize="11" FontWeight="Bold" Foreground="White" TextAlignment="Center">
                                <TextBlock.Text>
                                    <Binding Path="IsOnline">
                                        <Binding.Converter>
                                            <local:BoolToStringConverter TrueValue="ONLINE" FalseValue="OFFLINE"/>
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Header="Gateway" Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource DarkPurpleBrush}" CornerRadius="4" Padding="6,2"
                               Visibility="{Binding IsGateway, Converter={StaticResource BooleanToVisibilityConverter}}"
                               HorizontalAlignment="Center">
                            <TextBlock Text="GW" FontSize="10" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</Border>

        <!-- Status Bar -->
        <TextBlock Grid.Row="4" Text="{Binding StatusMessage}" FontSize="12" 
                  Foreground="{StaticResource MutedTextBrush}" Margin="0,20,0,0"/>
    </Grid>
</UserControl>
